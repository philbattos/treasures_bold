  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
<table>
  <thead>
    <tr>
      <th>Search Query</th>
      <th>Date</th>
    </tr>
  </thead>

  <tbody>
    <% @user.searches.each do |search| %>
      <tr>
        <td><%= search[:verbatim] %></td>
        <td><%= search[:created_at].strftime "%b %d, %Y" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</p>

